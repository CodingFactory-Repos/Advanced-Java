<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.Dish">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="600.0">
               <children>
                  <Label text="Liste des plats" />
                  <Button fx:id="addDishesButton" mnemonicParsing="false" text="Button" onMouseClicked="#onAddDishesButtonClick"/>
               </children>
            </HBox>
            <ScrollPane fx:id="listScrollPane" prefHeight="200.0" prefWidth="200.0">
              <content>
                <AnchorPane fx:id="dishAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="200.0">
                     <children>
                        <VBox fx:id="listVBox" prefHeight="200.0" prefWidth="600.0" />
                     </children>
                </AnchorPane>
              </content>
            </ScrollPane>
            <HBox fx:id="addDishesHBox" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" visible="false">
               <children>
                  <VBox prefWidth="100.0">
                     <children>
                        <Label text="Dishes Name" />
                        <TextField fx:id="nameTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Description" />
                        <TextField fx:id="descriptionTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Price" />
                        <TextField fx:id="priceTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Picture" />
                        <TextField fx:id="pictureTextField" />
                     </children>
                  </VBox>
                  <Button fx:id="validateButton" mnemonicParsing="false" text="Button" onMouseClicked="#addDishes" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
