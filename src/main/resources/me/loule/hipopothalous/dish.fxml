<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.DishController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="1000.0">
               <children>
                  <Label text="Liste des plats" />
                  <Button fx:id="addDishesButton" mnemonicParsing="false" onMouseClicked="#onAddDishesButtonClick" text="Ajouter plats" />
               </children>
            </HBox>
            <ScrollPane fx:id="listScrollPane" pannable="true" prefHeight="400.0" prefWidth="200.0">
               <content>
                  <VBox fx:id="listVBox" alignment="CENTER" prefHeight="200.0" />
               </content>
            </ScrollPane>
            <HBox fx:id="addDishesHBox" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0" visible="false">
               <children>
                  <VBox prefWidth="100.0">
                     <children>
                        <Label text="Dishes Name" />
                        <TextField fx:id="nameTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Description" />
                        <TextField fx:id="descriptionTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Price" />
                        <TextField fx:id="priceTextField" />
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Dishes Picture" />
                        <TextField fx:id="pictureTextField" />
                     </children>
                  </VBox>
                  <Button fx:id="validateButton" mnemonicParsing="false" onMouseClicked="#addDishes" text="Button" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
