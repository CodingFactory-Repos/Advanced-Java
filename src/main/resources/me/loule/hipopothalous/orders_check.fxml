<AnchorPane fx:id="ordersCheckPanel" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.CheckOrders">
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <TableView fx:id="ordersTableView">
                    <columns>
                      <TableColumn fx:id="orderId" editable="false" prefWidth="100.0" text="Order ID" />
                      <TableColumn fx:id="orderStatus" editable="false" prefWidth="100.0" text="Status" />
                    <TableColumn fx:id="orderTable" editable="false" prefWidth="100.0" text="Table" />
                    <TableColumn fx:id="orderPersons" editable="false" prefWidth="100.0" text="Persons" />
                    <TableColumn fx:id="orderDate" editable="false" prefWidth="150.0" text="Date" />
                    <TableColumn fx:id="orderTotalPrice" editable="false" prefWidth="100.0" text="Total Price" />
                    </columns>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TableView>
                   <VBox fx:id="vbTextFields" spacing="15.0" visible="false">
                     <Button fx:id="btnCloseVbox" alignment="CENTER" mnemonicParsing="false" onMousePressed="#handleCloseVbox" text="X" />
                     <VBox alignment="TOP_CENTER">
                        <children>
                           <GridPane>
                             <columnConstraints>
                               <ColumnConstraints hgrow="SOMETIMES" maxWidth="99.0" minWidth="10.0" prefWidth="86.112548828125" />
                               <ColumnConstraints hgrow="SOMETIMES" maxWidth="159.49749755859375" minWidth="10.0" prefWidth="121.887451171875" />
                             </columnConstraints>
                             <rowConstraints>
                               <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                               <RowConstraints minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                             </rowConstraints>
                              <children>
                                 <Label text="Order ID" />
                                   <TextField fx:id="tfOrderId" editable="false" promptText="Order Id" GridPane.columnIndex="1" />
                                   <MenuButton fx:id="mbOrderStatus" mnemonicParsing="false" text="MenuButton" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                       <items>
                                           <MenuItem mnemonicParsing="false" text="Paid" />
                                           <MenuItem mnemonicParsing="false" text="Delivered" />
                                           <MenuItem mnemonicParsing="false" text="Prepared" />
                                           <MenuItem mnemonicParsing="false" text="Cooking" />
                                       </items>
                                   </MenuButton>
                                 <Label text="Status" GridPane.rowIndex="1" />
                              </children>
                           </GridPane>
                             <Button fx:id="btnConfirmUpdate" alignment="CENTER" mnemonicParsing="false" onMousePressed="#handleUpdate" text="Confirm" />
                        </children>
                     </VBox>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                   </VBox>
               </children>
            </HBox>
            <HBox fx:id="hbButtons" alignment="CENTER" prefHeight="50.0" visible="false">
               <children>
                  <Button fx:id="btnCancelOrder" alignment="CENTER" mnemonicParsing="false" onMousePressed="#handleCancelOrder" text="Cancel Order" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
