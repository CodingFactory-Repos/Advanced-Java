<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.HelloController">
    <VBox prefHeight="200.0" prefWidth="100.0">
        <children>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefWidth="600.0" spacing="10">
                <children>
                    <Button fx:id="welcomeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onWelcomeButtonClick" prefHeight="45.0" prefWidth="100.0" text="Accueil"
                            textAlignment="CENTER"/>
                    <Button fx:id="dishesButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onDishesButtonClick" prefHeight="45.0" prefWidth="100.0" text="Plats"
                            textAlignment="CENTER"/>
                    <Button fx:id="tablesButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                            onMouseClicked="#onTablesButtonClick" prefHeight="45.0" prefWidth="100.0" text="Tables"
                            textAlignment="CENTER"/>
                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="45.0"
                            prefWidth="100.0" text="Commandes" textAlignment="CENTER"/>
                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="45.0"
                            prefWidth="100.0" text="Statistiques" textAlignment="CENTER"/>
                    <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="45.0"
                            prefWidth="100.0" text="ParamÃ¨tres" textAlignment="CENTER"/>
                </children>
            </HBox>
            <StackPane prefHeight="100.0" prefWidth="200.0">
                <children>
                    <fx:include fx:id="dishesPanel" source="dish.fxml" visible="false" StackPane.alignment="CENTER"/>
                    <fx:include fx:id="tablesPanel" source="table.fxml" visible="false" StackPane.alignment="CENTER"/>
                    <VBox alignment="CENTER" fx:id="welcomeVBox">
                        <Label styleClass="title" text="Bienvenue chez MonRestaurant"/>
                        <Label text="Ce logiciel permet la gestion des tables et des plats"/>
                    </VBox>
                </children>
                <StackPane.margin>
                    <Insets top="-50"/>
                </StackPane.margin>
            </StackPane>
        </children>
    </VBox>
</AnchorPane>
