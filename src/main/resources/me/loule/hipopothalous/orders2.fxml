<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.OrdersController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Pagination fx:id="dishesPagination" prefHeight="200.0" prefWidth="400.0" />
            <VBox alignment="TOP_CENTER" minHeight="300.0" minWidth="200.0">
               <children>
                  <Label text="Order details">
                     <VBox.margin>
                        <Insets bottom="3.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="lvOrder" />
                  <Label fx:id="lblTotalPrice" text="Total:">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="btnConfirmOrder" mnemonicParsing="false" onMousePressed="#addOrder" text="Confirm">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>