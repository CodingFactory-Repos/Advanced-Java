<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.loule.hipopothalous.controller.OrdersController">
   <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <GridPane>
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Persons" GridPane.rowIndex="1" />
                              <TextField fx:id="tfPersonNumber" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Table" />
                              <ComboBox fx:id="tableListComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#addTableNumber"/>
                           </children>
                        </GridPane>
                     </children>
                  </HBox>
                  <Pagination fx:id="dishesPagination" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" minHeight="300.0" minWidth="200.0">
               <children>
                  <Label text="Order details">
                     <VBox.margin>
                        <Insets bottom="3.0" top="5.0" />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="lvOrder" />
                  <Label fx:id="lblTotalPrice" text="Total:">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="btnConfirmOrder" mnemonicParsing="false" onMousePressed="#addOrder" text="Confirm">
                     <VBox.margin>
                        <Insets bottom="5.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
